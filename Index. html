  </div>  <script>
    // --- DATA: levels -> subjects -> topics (sample representative list covering many areas)
    const DATA = {
      Elementary: {
        "Subjects": [
          {name:"Math", topics:[
            {id:'e-math-1', title:'Numbers & Place Value', summary:'Understanding whole numbers, place value, comparing and ordering, rounding.'},
            {id:'e-math-2', title:'Basic Operations', summary:'Addition, subtraction, multiplication, division with whole numbers.'},
            {id:'e-math-3', title:'Fractions & Decimals', summary:'Simple fractions, equivalent fractions, introduction to decimals.'}
          ]},
          {name:"Science", topics:[
            {id:'e-sci-1',title:'Plants & Animals',summary:'Basic life cycles, habitats, and needs of living things.'},
            {id:'e-sci-2',title:'Earth & Weather',summary:'Seasons, weather patterns, sun and moon basics.'}
          ]},
          {name:"English", topics:[{id:'e-eng-1',title:'Reading Comprehension',summary:'Main idea, details, sequencing.'},{id:'e-eng-2',title:'Grammar Basics',summary:'Nouns, verbs, simple punctuation.'}]}
        ]
      },
      Middle: {
        "Subjects":[
          {name:'Math', topics:[{id:'m-math-1',title:'Pre-Algebra Basics',summary:'Integers, factors, multiples, simple equations.'},{id:'m-math-2',title:'Ratio & Proportion',summary:'Ratios, rates, percent problems.'}]},
          {name:'Science', topics:[{id:'m-sci-1',title:'Cells & Organisms',summary:'Cell structure, basic genetics.'},{id:'m-sci-2',title:'Forces & Motion',summary:'Newtonian basics and simple machines.'}]},
          {name:'English', topics:[{id:'m-eng-1',title:'Essay Writing',summary:'Paragraph structure, thesis, supporting evidence.'}]}
        ]
      },
      High: {
        "Subjects":[
          {name:'Mathematics', topics:[{id:'h-math-1',title:'Algebra I',summary:'Linear equations, functions, graphing.'},{id:'h-math-2',title:'Geometry',summary:'Angles, proofs, circles, area/volume.'},{id:'h-math-3',title:'Trigonometry',summary:'Ratios, unit circle, identities.'}]},
          {name:'Science', topics:[{id:'h-sci-1',title:'Biology',summary:'Cellular biology, evolution, ecology.'},{id:'h-sci-2',title:'Chemistry',summary:'Atoms, periodic table, reactions.'}]},
          {name:'English', topics:[{id:'h-eng-1',title:'Literature Analysis',summary:'Themes, devices, close reading.'}]},
          {name:'History', topics:[{id:'h-hist-1',title:'World History',summary:'Major eras, revolutions, world wars.'}]}
        ]
      },
      College: {
        "Subjects":[
          {name:'Mathematics', topics:[{id:'c-math-1',title:'Calculus I',summary:'Limits, derivatives, applications.'},{id:'c-math-2',title:'Linear Algebra',summary:'Matrices, vectors, systems of equations.'}]},
          {name:'Science', topics:[{id:'c-sci-1',title:'Organic Chemistry',summary:'Functional groups, basic reactions.'},{id:'c-sci-2',title:'Microbiology',summary:'Cellular microbes, lab basics.'}]},
          {name:'Computer Science', topics:[{id:'c-cs-1',title:'Programming Fundamentals',summary:'Data structures, algorithms, complexity.'},{id:'c-cs-2',title:'Database Systems',summary:'SQL, normalization, transactions.'}]}
        ]
      }
    };

    // --- Utilities & Rendering ---
    const levelsEl = document.getElementById('levels');
    const searchEl = document.getElementById('search');
    const titleEl = document.getElementById('title');
    const subtitleEl = document.getElementById('subtitle');
    const mainContent = document.getElementById('mainContent');
    const topicDetails = document.getElementById('topicDetails');
    const quickList = document.getElementById('quickList');
    const myNotes = document.getElementById('myNotes');

    let state = {level:null, subject:null, topic:null};

    function renderLevels(filter=''){
      levelsEl.innerHTML = '';
      Object.entries(DATA).forEach(([levelName, levelObj])=>{
        const lvl = document.createElement('div'); lvl.className='level';
        const header = document.createElement('header');
        header.innerHTML = `<strong>${levelName}</strong><span class=muted style="font-size:12px">${levelObj.Subjects.length} subjects</span>`;
        header.onclick = ()=>{ lvl.classList.toggle('open'); }
        lvl.appendChild(header);
        const subjWrap = document.createElement('div'); subjWrap.className='subjects';
        levelObj.Subjects.forEach(sub=>{
          const sEl = document.createElement('div'); sEl.className='subject'; sEl.textContent=sub.name;
          sEl.onclick = ()=>{ renderTopics(levelName, sub); }
          subjWrap.appendChild(sEl);
        });
        lvl.appendChild(subjWrap);
        levelsEl.appendChild(lvl);
      });
    }

    function renderTopics(levelName, subject){
      state.level = levelName; state.subject = subject.name; state.topic=null;
      titleEl.textContent = `${state.level} • ${state.subject}`;
      subtitleEl.textContent = 'Select a topic to view summary, examples, and quiz.';
      const topics = subject.topics;
      mainContent.querySelector('#topicTitle').textContent = `${subject.name} — Topics`;
      topicDetails.innerHTML = `<div class="topic-list">${topics.map(t=>`<div class="topic" onclick="openTopic('${encodeURIComponent(levelName)}','${encodeURIComponent(subject.name)}','${encodeURIComponent(t.id)}')">${t.title}</div>`).join('')}</div>`;
      quickList.innerHTML = topics.slice(0,6).map(t=>`<div class='topic' onclick="openTopic('${encodeURIComponent(levelName)}','${encodeURIComponent(subject.name)}','${encodeURIComponent(t.id)}')">${t.title}</div>`).join('');
    }

    function findTopic(level, subjectName, topicId){
      const levelObj = DATA[level];
      if(!levelObj) return null;
      const sub = levelObj.Subjects.find(s=>s.name===subjectName);
      if(!sub) return null;
      const t = sub.topics.find(x=>x.id===topicId);
      return t? {...t, subject:sub.name, level}: null;
    }

    window.openTopic = function(level, subject, topicId){
      level = decodeURIComponent(level); subject=decodeURIComponent(subject); topicId=decodeURIComponent(topicId);
      const t = findTopic(level, subject, topicId);
      if(!t) return alert('Topic not found');
      state.topic = t.id;
      titleEl.textContent = `${t.title} — ${t.level}`;
      subtitleEl.textContent = `${t.subject}`;

      // Render details: summary, keyPoints placeholder, example, quiz placeholder
      topicDetails.innerHTML = `
        <h3>Summary</h3>
        <p>${t.summary || 'Short summary coming soon.'}</p>
        <h3>Key Points</h3>
        <ul><li>Key point 1</li><li>Key point 2</li><li>Key point 3</li></ul>
        <h3>Example</h3>
        <pre style="white-space:pre-wrap">Example problem or worked solution goes here.</pre><h3>Quick Quiz</h3>
    <div class="quiz">
      <div class="q">Q1. Sample question?<div class="option" onclick="answer(0,0)">A. Option 1</div><div class="option" onclick="answer(0,1)">B. Option 2</div></div>
    </div>
  `;

  // Load notes saved for this topic
  const key = `notes:${t.level}:${t.subject}:${t.id}`;
  myNotes.value = localStorage.getItem(key) || '';
  myNotes.dataset.key = key;
}

function answer(qIdx, idx){
  // demo: mark correct if idx==0
  const opts = document.querySelectorAll('.option');
  opts.forEach(o=>o.onclick=null);
  opts[idx].classList.add(idx===0? 'correct':'wrong');
}

// Search across all topics
searchEl.addEventListener('input', e=>{
  const q = e.target.value.trim().toLowerCase();
  if(!q){ renderLevels(); mainContent.querySelector('#topicTitle').textContent='Overview'; topicDetails.innerHTML=''; quickList.innerHTML=''; return; }
  const results = [];
  Object.entries(DATA).forEach(([lvl, obj])=>{
    obj.Subjects.forEach(s=>{
      s.topics.forEach(t=>{
        const txt = (t.title + ' ' + (t.summary||'') + ' ' + s.name + ' ' + lvl).toLowerCase();
        if(txt.includes(q)) results.push({lvl, subject:s.name, topic:t});
      });
    });
  });
  // render results
  titleEl.textContent = `Search results for "${q}"`;
  subtitleEl.textContent = `${results.length} topics found`;
  topicDetails.innerHTML = results.map(r=>`<div class="topic" onclick="openTopic('${encodeURIComponent(r.lvl)}','${encodeURIComponent(r.subject)}','${encodeURIComponent(r.topic.id)}')">${r.topic.title} <div class='muted' style='font-size:12px'>${r.subject} • ${r.lvl}</div></div>`).join('') || '<div class="muted">No results</div>';
  quickList.innerHTML = '';
});

// Auto-save notes
myNotes.addEventListener('input', e=>{
  const k = e.target.dataset.key;
  if(k) localStorage.setItem(k, e.target.value);
});

// Theme toggle (simple light/dark)
document.getElementById('themeToggle').addEventListener('click', ()=>{
  if(document.documentElement.style.getPropertyValue('--bg') === '#ffffff'){
    document.documentElement.style.setProperty('--bg','#0f1724');
    document.body.style.color='var(--text)';
  } else {
    document.documentElement.style.setProperty('--bg','#ffffff');
    document.body.style.color='#111';
  }
});

// Share link
document.getElementById('getLink').addEventListener('click', ()=>{
  navigator.clipboard.writeText(location.href);
  alert('Page link copied to clipboard');
});

// Initial render
renderLevels();

  </script>
</body>
</html>